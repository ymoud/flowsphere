{
  "templateName": "Username/Password Prompt",
  "description": "Interactive credential collection",
  "category": "user-input",
  "requiredVariables": [],
  "nodes": [
    {
      "id": "login-with-prompts",
      "name": "Login with User Credentials",
      "method": "POST",
      "url": "/auth/login",
      "userPrompts": {
        "username": "Enter your username:",
        "password": "Enter your password:"
      },
      "body": {
        "username": "{{ .input.username }}",
        "password": "{{ .input.password }}"
      },
      "validations": [
        { "httpStatusCode": 200 },
        { "jsonpath": ".token", "exists": true }
      ]
    }
  ]
}
