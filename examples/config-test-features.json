{
  "_comment": "This config demonstrates user input prompts and variable substitution. For browser launch examples, see config-oauth-example.json",
  "defaults": {
    "baseUrl": "https://jsonplaceholder.typicode.com",
    "timeout": 10,
    "validations": [
      {
        "httpStatusCode": 200
      }
    ]
  },
  "steps": [
    {
      "id": "create-a-post-with-user-input",
      "name": "Create a post with user input",
      "method": "POST",
      "url": "/posts",
      "prompts": {
        "title": "Enter post title:",
        "author": "Enter author name:"
      },
      "body": {
        "title": "{{ .input.title }}",
        "body": "Written by {{ .input.author }}",
        "userId": 1
      },
      "validations": [
        {
          "jsonpath": ".id",
          "exists": true
        }
      ]
    },
    {
      "id": "fetch-the-created-post",
      "name": "Fetch the created post",
      "method": "GET",
      "url": "/posts/{{ .responses.create-a-post-with-user-input.id }}",
      "validations": [
        {
          "jsonpath": ".id",
          "exists": true
        }
      ]
    }
  ]
}