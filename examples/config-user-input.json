{
  "enableDebug": false,
  "defaults": {
    "baseUrl": "https://api.example.com",
    "timeout": 30,
    "headers": {
      "Content-Type": "application/json"
    },
    "validations": [
      {
        "status": 200
      }
    ]
  },
  "steps": [
    {
      "name": "User login",
      "method": "POST",
      "url": "/auth/login",
      "prompts": {
        "username": "Enter your username:",
        "password": "Enter your password:"
      },
      "body": {
        "username": "{{ .input.username }}",
        "password": "{{ .input.password }}"
      },
      "id": "userLogin",
      "validations": [
        {
          "jsonpath": ".token",
          "exists": true
        }
      ]
    },
    {
      "name": "Get user profile",
      "method": "GET",
      "url": "/user/profile",
      "headers": {
        "Authorization": "Bearer {{ .responses.userLogin.token }}"
      },
      "id": "getUserProfile"
    }
  ]
}